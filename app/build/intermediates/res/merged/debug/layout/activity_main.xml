<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#ECEFF1" >

    <TextView
        android:text="My Nanodegree Apps"
        android:fontFamily="sans_serif_light"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/project_spotify_streamer"
        android:text="Spotify Streamer"
        android:fontFamily="sans_serif_light"
        android:textSize="16sp"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:background="#64B5F6"
        android:onClick="project_spotify_streamer" />

    <Button
        android:id="@+id/project_scores_app"
        android:text="Scores App"
        android:fontFamily="sans_serif_light"
        android:textSize="16sp"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:background="#42A5F5"
        android:onClick="project_scores_app" />

    <Button
        android:id="@+id/project_library_app"
        android:text="Library App"
        android:fontFamily="sans_serif_light"
        android:textSize="16sp"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:background="#2196F3"
        android:onClick="project_library_app" />

    <Button
        android:id="@+id/project_build_it_bigger"
        android:text="Build it Bigger"
        android:fontFamily="sans_serif_light"
        android:textSize="16sp"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:background="#1E88E5"
        android:onClick="project_build_it_bigger" />

    <Button
        android:id="@+id/project_xyz_reader"
        android:text="XYZ Reader"
        android:fontFamily="sans_serif_light"
        android:textSize="16sp"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:background="#1976D2"
        android:onClick="project_xyz_reader" />

    <Button
        android:id="@+id/project_capstone"
        android:text="Capstone: My App"
        android:fontFamily="sans_serif_light"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:background="#0D47A1"
        android:onClick="project_capstone" />

</LinearLayout>
